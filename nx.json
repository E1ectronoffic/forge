{
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": ["build", "build:fast", "build:full", "test", "test:base", "test:fast"]
      }
    }
  },
  "targetDefaults": {
    "test": {
      "dependsOn": ["^test"]
    },
    "test:base": {
      "dependsOn": ["^test:base"]
    },
    "test:fast": {
      "dependsOn": ["^test:fast"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["{projectRoot}/dist"]
    },
    "build:fast": {
      "dependsOn": ["^build:fast"],
      "outputs": ["{projectRoot}/dist"]
    },
    "build:full": {
      "dependsOn": ["^build:full"],
      "outputs": ["{projectRoot}/dist"]
    }
  }
}
